<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="tw.gov.nta.sql.debt">
	<class
		name="IssueMain"
		table="issue_main"
	>
		<id
			name="id"
			type="integer"
			column="ID"
		>
			<generator class="org.hibernate.id.IdentityGenerator"/>
		</id>

		<property
			name="debtCode"
			column="DEBT_CODE"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="budgetCode"
			column="BUDGET_CODE"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="issueDate"
			column="ISSUE_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="issueAmount"
			column="ISSUE_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="issueSerial"
			column="ISSUE_SERIAL"
			type="string"
			not-null="true"
			length="10"
		/>
		<property
			name="accountYear"
			column="ACCOUNT_YEAR"
			type="string"
			not-null="true"
			length="3"
		/>
		<property
			name="serialNo"
			column="SERIAL_NO"
			type="string"
			not-null="true"
			length="5"
		/>
		<property
			name="debtType"
			column="DEBT_TYPE"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="debtName"
			column="Debt_NAME"
			type="string"
			not-null="false"
			length="255"
		/>
		
		<property
			name="debtShortName"
			column="Debt_Short_NAME"
			type="string"
			not-null="false"
			length="255"
		/>
		
		<property
			name="averageRate"
			column="AVERAGE_RATE"
			type="big_decimal"
			not-null="false"
			length="13"
		/>
		<property
			name="dueDate"
			column="DUE_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="showType"
			column="SHOW_TYPE"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="issueKind"
			column="ISSUE_KIND"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="expectAmount"
			column="EXPECT_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="remark"
			column="REMARK"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="bondType"
			column="BOND_TYPE"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="cashDueDate"
			column="CASH_DUE_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="chargeRate"
			column="CHARGE_RATE"
			type="big_decimal"
			not-null="false"
			length="13"
		/>
		<property
			name="sellStatus"
			column="SELL_STATUS"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="bondSellStatus"
			column="BOND_SELL_STATUS"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="capitalAmount"
			column="CAPITAL_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="interestAmount"
			column="INTEREST_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		
		<property
			name="realAmount"
			column="real_Amount"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="firstRepayDate"
			column="FIRST_REPAY_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="firstInterestDate"
			column="FIRST_INTEREST_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="repayAlternate"
			column="REPAY_ALTERNATE"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="interestAlternate"
			column="INTEREST_ALTERNATE"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="sourceIssueId"
			column="SOURCE_ISSUE_ID"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="issueInterval"
			column="ISSUE_INTERVAL"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="bondKind"
			column="BOND_KIND"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="sellAmount"
			column="SELL_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="payLimit"
			column="PAY_LIMIT"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="rateKind"
			column="RATE_KIND"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="userid"
			column="USERID"
			type="string"
			not-null="false"
			length="10"
		/>
		<property
			name="modDate"
			column="MOD_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="createDate"
			column="CREATE_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="payableInterestAmount"
			column="payable_interest_amount"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<set
			inverse="true"
			lazy="true"
			name="issueTicketDets"
			cascade="delete"
		>
			<key column="ISSUE_ID" />
			<one-to-many 
				class="IssueTicketDet" 
			/>
		</set>

		<set
			inverse="true"
			lazy="true"
			name="issueExchangeDets"
			cascade="delete"
		>
			<key column="ISSUE_ID" />
			<one-to-many 
				class="IssueExchangeDet" />
		</set>

		<set name="vouchers" lazy="true" cascade="none" inverse="true">
			<key>
				<column name="issue_id"/>
			</key>
			<one-to-many class="tw.gov.nta.sql.account.VoucherMain"/>
		</set>
		
		<set name="debtMains" cascade="delete" inverse="true" lazy="false" >
			<key>
				<column name="ISSUE_ID"/>
			</key>
			<one-to-many class="DebtMain"/>
		</set>
		
		<property
			name="finishDate"
			column="finish_date"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="continueDate"
			column="continue_date"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="zeroInterestStatus"
			column="zero_interest_status"
			type="string"
			not-null="false"
			length="1"
		/>
	</class>	
</hibernate-mapping>