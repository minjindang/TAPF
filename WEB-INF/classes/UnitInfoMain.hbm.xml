			name="groupid"
			column="GROUPID"
			type="string"
			not-null="false"
			length="2"
		/>
		<property
			name="seqNo"
			column="seq_no"
			type="string"
			not-null="false"
			length="2"
		/>
	
		<set name="unitAllocateMains" inverse="true" lazy="true">
			<key column="unit_Info_Id"/>
			<one-to-many class="UnitAllocateMain"/>
		</set>

		<set name="unitPercentDets" inverse="true" lazy="true">
			<key column="unit_Info_Id"/>
			<one-to-many class="UnitPercentDet"/>
		</set>


