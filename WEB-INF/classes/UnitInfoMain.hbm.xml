		<property
			name="usrid"
			column="USRID"
			type="string"
			not-null="false"
			length="10"
		/>
		<property
			name="modDate"
			column="MOD_DATE"
			type="timestamp"
			not-null="true"
			length="23"
		/>
		<property
			name="remark"
			column="REMARK"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="createDate"
			column="CREATE_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="unitId"
			column="UNIT_ID"
			type="string"
			not-null="false"
			length="10"
		/>
		<property
			name="unitName"
			column="UNIT_NAME"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="sbank1"
			column="SBANK1"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="sbranch1"
			column="SBRANCH1"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="sno1"
			column="SNO1"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="sbank2"
			column="SBANK2"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="sbranch2"
			column="SBRANCH2"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="sno2"
			column="SNO2"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="tbank1"
			column="TBANK1"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="tacct1"
			column="TACCT1"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="tbank2"
			column="TBANK2"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="tacct2"
			column="TACCT2"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="temail"
			column="TEMAIL"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="tname"
			column="TNAME"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="ttel"
			column="TTEL"
			type="string"
			not-null="false"
			length="30"
