<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="tw.gov.nta.sql.debt">
	<class
		name="PaymentMain"
		table="payment_main"
	>
		<id
			name="id"
			type="integer"
			column="ID"
		>
			<generator class="org.hibernate.id.IdentityGenerator"/>
		</id>

		<property
			name="issueId"
			column="ISSUE_ID"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="debtId"
			column="DEBT_ID"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="repayDate"
			column="REPAY_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="capitalAmount"
			column="CAPITAL_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="interestAmount"
			column="INTEREST_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="capitalSerial"
			column="CAPITAL_SERIAL"
			type="string"
			not-null="false"
			length="5"
		/>
		<property
			name="interestSerial"
			column="INTEREST_SERIAL"
			type="string"
			not-null="false"
			length="5"
		/>
		<property
			name="planRepayDate"
			column="PLAN_REPAY_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="interestDays"
			column="INTEREST_DAYS"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="balanceCapitalAmount"
			column="BALANCE_CAPITAL_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="manageInterestAmount"
			column="MANAGE_INTEREST_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="manageCapitalAmount"
			column="MANAGE_CAPITAL_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="averageRate"
			column="AVERAGE_RATE"
			type="big_decimal"
			not-null="false"
			length="13"
		/>
		<property
			name="buyStatus"
			column="BUY_STATUS"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="buyAmount"
			column="BUY_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="advanceTax"
			column="ADVANCE_TAX"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="buyPremium"
			column="BUY_PREMIUM"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="buyInterest"
			column="BUY_INTEREST"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="chargeAmount"
			column="CHARGE_AMOUNT"
			type="big_decimal"
			not-null="false"
			length="20"
		/>
		<property
			name="userid"
			column="USERID"
			type="string"
			not-null="false"
			length="10"
		/>
		<property
			name="modDate"
			column="MOD_DATE"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="startDate"
			column="start_date"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="endDate"
			column="end_date"
			type="timestamp"
			not-null="false"
			length="23"
		/>
		<property
			name="sourcId"
			column="source_id"
			type="integer"
			not-null="false"
			length="10"
		/>
		<many-to-one
			name="plan"
			column="PLAN_ID"
			class="DebtPlanDet"
			not-null="true"
			fetch="select"
			lazy="false"
		>
		</many-to-one>

		<set name="paymentTicketDets" inverse="true" lazy="true">
			<key column="ID"/>
			<one-to-many class="PaymentTicketDet"/>
		</set>
		<property
			name="repayType"
			column="repay_type"
			type="string"
			not-null="false"
			length="1"
		/>	

	</class>	
</hibernate-mapping>